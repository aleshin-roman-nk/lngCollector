@page "{id}"
@using lngCollector.Tools
@model lngCollector.Pages.W.EditModel
@{
    ViewData["Title"] = "Edit";
}

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger" role="alert">
        @Model.Error
    </div>
}

<form method="post" class="mt-3" enctype="multipart/form-data">
    <!--Создаём скрытое поле для параметра ID-->
    <input type="hidden" asp-for="Word.id" />

    <!--Добавляем поля редактирования-->
    <div class="row justify-content-center m-3">
        <div class="col col-lg-8">
            <div class="card">

                <div class="card-header">
                    <!--Добавляем поле редактирования имени-->
                    <div class="form-group row">
                        <label asp-for="Word.text" class="col col-lg-4 col-form-label text-right">Word:</label>
                        <div class="col-12 col-lg-6">
                            <input asp-for="Word.text" class="form-control mr-2" placeholder="@Model.Word.text" />
                            <!--Добавляем сообщение валидации формы-->
                            <span asp-validation-for="Word.text" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">

                        <div class="mb-3">
                            <label asp-for="Word.description" class="form-label">DESCRIPTION</label>
                            <textarea asp-for="Word.description" class="form-control" rows="15">@Model.Word.description</textarea>
                        </div>

                    </div>


                    <div class="row">
                        <div class="col">
                            <div class="card-footer text-center" style="background-color: rgba(0,0,0,.25)">
                                <a asp-page="/W/Detail" asp-route-ID="@Model.Word.id" class="btn btn-secondary">Back</a>
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </div>


                </div>


            </div>
        </div>
    </div>
</form>


