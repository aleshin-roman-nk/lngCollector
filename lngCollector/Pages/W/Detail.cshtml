@page "{id}"
@model lngCollector.Pages.W.DetailModel
@{
    ViewData["Title"] = $"Detail::'{Model.Word.text}'";

    string[] lines = null;
    if (!string.IsNullOrEmpty(Model.Word.description))
        lines = Model.Word.description.Split("\n");
    else lines = new string[] { };
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card">

            <div class="card-header cardHeaderStyle">
                <h1>@Model.Word.text</h1>
            </div>

            <div class="card-body">
                <div class="row">

                    <div class="col col-lg-9">
                        @foreach (var line in lines)
                        {
                            @line<br>
                        }
                    </div>
                    <hr>
@*                    <div class="col col-lg-3">
                        <div style="border-right: 1px solid rgba(0,0,0,.1);">
                            <img class="card-image-top imageThumbnail border border-primary" style="background-color: #d1e7ff" src="@photoPath" asp-append-version = "true"/>
                        </div>
                    </div>*@

                </div>

                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,.25)">
                            <a asp-page="/W/Words" class="btn btn-secondary">Back</a>
                            <a asp-page="/W/Edit" asp-route-ID="@Model.Word.id" class="btn btn-primary">Edit</a>
                            <a asp-page="/games/makeSentences" asp-route-ID="@Model.Word.id" class="btn btn-danger">Game</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>