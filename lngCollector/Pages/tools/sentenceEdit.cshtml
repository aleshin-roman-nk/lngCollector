@page "{id}/{handler?}/{sentid?}"
@model lngCollector.Pages.tools.sentenceEditModel
@{
}

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger" role="alert">
        @Model.Error
    </div>
}

<h1>@Model.Sentence.Text</h1>

<br>

<form method="post" class="mt-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="Sentence.Id" />
    <input type="hidden" asp-for="Sentence.WordId" />

    <div class="mb-3">
        <textarea asp-for="Sentence.Text" class="form-control" rows="5">@Model.Sentence.Text</textarea>

        <br>

        <a asp-page="/games/makeSentences" asp-route-ID="@Model.Sentence.WordId" class="btn btn-secondary">Back</a>
        <button class="btn btn-success" type="submit" asp-page-handler="Commit">Commit</button>
        <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Delete</button>
    </div>
</form>